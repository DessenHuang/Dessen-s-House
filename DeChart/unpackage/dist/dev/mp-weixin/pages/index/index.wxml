<view class="container"><view class="top-bar"><navigator class="top-bar-left" url="{{'/pages/user-home/user-home?id='+id}}" hover-class="none"><image class="myIcon" src="{{iconPath}}"></image></navigator><view class="top-bar-right"><image class="search" src="/static/images/index/search.png" data-event-opts="{{[['tap',[['toSearch',['$event']]]]]}}" bindtap="__e"></image><image class="add" src="/static/images/index/add.png" data-event-opts="{{[['tap',[['toBuildGroup',['$event']]]]]}}" bindtap="__e"></image></view></view><view class="list"><view data-event-opts="{{[['tap',[['toFriendQuest',['$event']]]]]}}" class="apply" bindtap="__e"><view class="apply-left"><block wx:if="{{requests.tip!==0}}"><text class="tips">{{requests.tip}}</text></block><image src="/static/images/index/add-friend.png"></image></view><view class="apply-right"><view class="info-box"><text class="nickname">好友请求</text><view class="date"><uni-dateformat vue-id="8dd740cc-1" date="{{requests.time}}" threshold="{{[60000,3600000]}}" format="yyyy/MM/dd hh:mm:ss" bind:__l="__l"></uni-dateformat></view></view><view class="content">{{requests.msg}}</view></view></view><block><block wx:for="{{friendList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['toChart',['$0'],[[['friendList','id',item.id]]]]]]]}}" class="list-item" bindtap="__e"><view class="list-item-left"><block wx:if="{{item.tip>0}}"><text class="tips">{{item.tip}}</text></block><image src="{{''+item.iconPath}}"></image></view><view class="list-item-right"><view class="info-box"><view class="nickname">{{item.name}}</view><view class="date"><uni-dateformat vue-id="{{'8dd740cc-2-'+index}}" date="{{item.lastTime}}" threshold="{{[60000,3600000]}}" format="yyyy/MM/dd hh:mm:ss" bind:__l="__l"></uni-dateformat></view></view><view class="content">{{item.msg}}</view></view></view></block></block></view></view>