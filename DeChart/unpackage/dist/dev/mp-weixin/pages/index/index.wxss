.container {
  padding-top: 88rpx;
}
.top-bar {
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #cccc;
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
}
.top-bar-left {
  /* margin-left: 20rpx;
 */
  width: 15%;
  display: flex;
  justify-content: center;
}
.top-bar-center {
  width: 70%;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
}
.top-bar-right {
   /* margin-right: 20rpx;
 */
   width: 15%;
   display: flex;
   justify-content: center;
}
.top-bar {
  background-color: #fff;
}
.top-bar-right {
  width: 24%;
}
.top-bar .myIcon {
  width: 68rpx;
  height: 68rpx;
  border-radius: 10px;
  display: block;
}
.top-bar .search {
  width: 60rpx;
  height: 60rpx;
  padding: 0 10rpx;
}
.top-bar .add {
  width: 60rpx;
  height: 60rpx;
  padding: 0 10rpx;
}
.list {
  margin-top: 10px;
}
.list .apply {
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.list .apply-left {
  border-radius: 20rpx;
  background-color: #FFE431;
  margin-right: 10px;
  position: relative;
}
.list .apply-left .tips {
  position: absolute;
  top: -6rpx;
  left: 68rpx;
  z-index: 10;
  min-width: 20rpx;
  height: 36rpx;
  padding: 0 8rpx;
  background-color: #ff5d5b;
  border-radius: 50%;
  font-size: 24rpx;
  color: #fff;
  line-height: 36rpx;
  text-align: center;
}
.list .apply-left image {
  width: 96rpx;
  height: 96rpx;
}
.list .apply-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 80%;
}
.list .apply-right .info-box {
  display: flex;
  justify-content: space-between;
}
.list .apply-right .info-box .nickname {
  font-size: 36rpx;
  color: #272832;
  margin-bottom: 5px;
}
.list .apply-right .info-box .date {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
}
.list .apply-right .content {
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.list-item-left {
  margin-right: 10px;
  position: relative;
}
.list-item-left .tips {
  position: absolute;
  top: -6rpx;
  left: 68rpx;
  z-index: 10;
  min-width: 36rpx;
  height: 36rpx;
