.container {
  padding-top: 88rpx;
}
.top-bar {
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #cccc;
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
}
.top-bar-left {
  /* margin-left: 20rpx;
 */
  width: 15%;
  display: flex;
  justify-content: center;
}
.top-bar-center {
  width: 70%;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
}
.top-bar-right {
   /* margin-right: 20rpx;
 */
   width: 15%;
   display: flex;
   justify-content: center;
}
.top-bar {
  border-bottom: none;
}
.top-bar .top-bar-left .back {
  width: 48rpx;
  height: 48rpx;
}
.bg {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
.bg-img {
  width: 100%;
  height: 50%;
}
.main {
  padding-top: 360rpx;
}
.main-content {
  background-color: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 28rpx;
  min-height: 680rpx;
}
.main-content .head {
  height: 182rpx;
  border-bottom: solid 1px #ccc;
}
.main-content .head-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.main-content .head-top .title {
  width: 60%;
  font-size: 48rpx;
  color: #272832;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.main-content .head-top .date {
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.5);
}
.main-content .head-bottom .intro {
  margin: 20rpx 0;
  width: 90%;
  font-size: 28rpx;
  color: #272832;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.main-content .members {
  padding: 40rpx 0;
  border-bottom: solid 1px #ccc;
}
.main-content .members-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.main-content .members-top .title {
  font-size: 36rpx;
  color: #272832;
  font-weight: 600;
}
.main-content .members-top .regular {
  display: flex;
  align-items: center;
}
.main-content .members-top .regular-option {
  font-size: 32rpx;
  color: rgba(39, 40, 50, 0.6);
  font-weight: 400;
}
.main-content .members-top .regular .right-img {
  width: 48rpx;
  height: 48rpx;
}
.main-content .members-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.main-content .members-list-item {
  position: relative;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}
.main-content .members-list-item .del {
  z-index: 99;
  position: absolute;
  top: -16rpx;
  right: 6rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border-radius: 50%;
}
.main-content .members-list-item .icon {
  width: 104rpx;
  height: 104rpx;
  border-radius: 20rpx;
}
.main-content .members-list-item .name {
  width: 104rpx;
  text-align: center;
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #272832;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.main-content .members-list .item-add .icon {
  background-color: #FFE431;
}
.main-content .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.main-content .item-left {
  width: 85%;
  display: flex;
  align-items: center;
}
.main-content .item-left .title {
  font-size: 32rpx;
  color: #272832;
  padding-right: 24rpx;
}
.main-content .item-left .content {
  display: block;
  width: 80%;
  font-size: 32rpx;
  color: rgba(39, 40, 50, 0.6);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.main-content .item-left .group-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
}
.main-content .item-right .right-img {
  width: 48rpx;
  height: 48rpx;
}
.main-content .dissolve,
.main-content .getOut {
  margin: auto;
  margin-top: 60rpx;
  width: 684rpx;
  height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #FF5D5B;
  font-weight: 400;
}

