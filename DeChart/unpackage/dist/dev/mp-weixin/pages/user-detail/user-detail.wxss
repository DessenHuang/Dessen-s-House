.container {
  padding-top: 88rpx;
}
.top-bar {
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #cccc;
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
}
.top-bar-left {
  /* margin-left: 20rpx;
 */
  width: 15%;
  display: flex;
  justify-content: center;
}
.top-bar-center {
  width: 70%;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
}
.top-bar-right {
   /* margin-right: 20rpx;
 */
   width: 15%;
   display: flex;
   justify-content: center;
}
.top-bar {
  background-color: #fff;
}
.top-bar .top-bar-left .back {
  width: 48rpx;
  height: 48rpx;
}
.user-info {
  padding-top: 32rpx;
}
.user-info-top, .user-info-bottom {
  padding: 0 20rpx;
}
.user-info-top .item, .user-info-bottom .item {
  height: 56px;
  display: flex;
  align-items: center;
}
.user-info-top .item-left, .user-info-bottom .item-left {
  width: 10%;
  margin-right: 5%;
}
.user-info-top .item-left .title, .user-info-bottom .item-left .title {
  text-align: center;
  font-size: 16px;
  color: #272832;
  font-weight: 400;
}
.user-info-top .item-right, .user-info-bottom .item-right {
  width: 85%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-info-top .item-right .icon, .user-info-bottom .item-right .icon {
  width: 54px;
  height: 54px;
  border-radius: 10px;
}
.user-info-top .item-right .forward, .user-info-bottom .item-right .forward {
  width: 24px;
  height: 24px;
  opacity: 0.3;
}
.user-info-top .item-right .content, .user-info-bottom .item-right .content {
  width: 80%;
  font-size: 16px;
  color: rgba(39, 40, 50, 0.6);
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.user-info-top .icon-item, .user-info-bottom .icon-item {
  height: 74px;
}
.user-info .logout-btn {
  margin: auto;
  margin-top: 160rpx;
  width: 684rpx;
  height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #FF5D5B;
  font-weight: 400;
}

