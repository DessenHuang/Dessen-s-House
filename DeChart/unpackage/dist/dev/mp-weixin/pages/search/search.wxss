.container {
  padding-top: 88rpx;
}
.top-bar {
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #cccc;
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
}
.top-bar-left {
  /* margin-left: 20rpx;
 */
  width: 15%;
  display: flex;
  justify-content: center;
}
.top-bar-center {
  width: 70%;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
}
.top-bar-right {
   /* margin-right: 20rpx;
 */
   width: 15%;
   display: flex;
   justify-content: center;
}
.top-bar .top-bar-left image {
  width: 36rpx;
  height: 36rpx;
}
.top-bar .top-bar-center {
  width: 85%;
}
.top-bar .top-bar-center .search-container {
  width: 100%;
}
.top-bar .top-bar-center .search-container uni-search-bar {
  height: 120rpx;
}
.top-bar .top-bar-right {
  width: 0;
}
.searchRes .user-list,
.searchRes .group-list {
  padding: 20rpx;
}
.searchRes .user-list .title,
.searchRes .group-list .title {
  font-size: 44rpx;
  font-weight: 600;
  padding-bottom: 20rpx;
}
.searchRes .user-list-item,
.searchRes .group-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.searchRes .user-list-item-left,
.searchRes .group-list-item-left {
  display: flex;
  align-items: center;
}
.searchRes .user-list-item-left .icon,
.searchRes .group-list-item-left .icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  margin-right: 28rpx;
}
.searchRes .user-list-item-left .userInfo,
.searchRes .group-list-item-left .userInfo {
  display: flex;
  flex-direction: column;
}
.searchRes .user-list-item-left .userInfo .nickname,
.searchRes .group-list-item-left .userInfo .nickname {
  font-size: 36rpx;
  color: #272832;
  font-weight: 400;
  padding: 6rpx 0;
}
.searchRes .user-list-item-left .userInfo .mail,
.searchRes .group-list-item-left .userInfo .mail {
  color: #666;
  font-size: 28rpx;
}
.searchRes .user-list-item-right text,
.searchRes .group-list-item-right text {
  display: block;
  width: 120rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 400;
}
.searchRes .user-list-item-right .add,
.searchRes .group-list-item-right .add {
  background-color: rgba(74, 170, 255, 0.1);
  color: #4AAAFF;
}
.searchRes .user-list-item-right .send,
.searchRes .group-list-item-right .send {
  background-color: #FFE431;
  color: #272832;
}
.searchRes .emptyTip {
  display: block;
  text-align: center;
  color: #cfcfcf;
  font-size: 36rpx;
  margin-top: 160rpx;
}

