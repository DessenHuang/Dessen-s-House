.container {
  padding-top: 88rpx;
}
.top-bar {
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #cccc;
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
}
.top-bar-left {
  /* margin-left: 20rpx;
 */
  width: 15%;
  display: flex;
  justify-content: center;
}
.top-bar-center {
  width: 70%;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
}
.top-bar-right {
   /* margin-right: 20rpx;
 */
   width: 15%;
   display: flex;
   justify-content: center;
}
.top-bar {
  background-color: #F4F4F4;
}
.top-bar .top-bar-left .back {
  width: 48rpx;
  height: 48rpx;
}
.top-bar .top-bar-right .more {
  width: 48rpx;
  height: 48rpx;
}
.chart {
  height: 100vh;
  background-color: #F4F4F4;
}
.chart .chart-main {
  padding-top: 20rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
}
.chart .chart-main .loading {
  text-align: center;
}
.chart .chart-main .loading-img {
  width: 60rpx;
  height: 60rpx;
}
.chart .chart-main .msg-item {
  padding: 20rpx 0;
}
.chart .chart-main .msg-item .time {
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.3);
  font-weight: 400;
}
.chart .chart-main .msg-item .msg-box {
  display: flex;
  flex-wrap: wrap;
}
.chart .chart-main .msg-item .msg-box .icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.chart .chart-main .msg-item .msg-box .content-text,
.chart .chart-main .msg-item .msg-box .content-map {
  max-width: 480rpx;
  padding: 20rpx;
  font-size: 32rpx;
  color: #272832;
  font-weight: 400;
  background-color: #fff;
  border-radius: 0 20rpx 20rpx 20rpx;
}
.chart .chart-main .msg-item .msg-box .content-map {
  width: 480rpx;
  padding: 0;
  border-radius: 20rpx 0 20rpx 20rpx;
}
.chart .chart-main .msg-item .msg-box .content-map .map-name {
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.chart .chart-main .msg-item .msg-box .content-map .map-address {
  padding: 10rpx 20rpx;
  font-size: 20rpx;
  color: rgba(39, 40, 50, 0.6);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.chart .chart-main .msg-item .msg-box .content-map .map {
  display: block;
  width: 100%;
  height: 300rpx;
}
.chart .chart-main .msg-item .msg-box .content-img {
  display: block;
  max-width: 284rpx;
  border-radius: 20rpx;
}
.chart .chart-main .msg-item-right .msg-box {
  flex-direction: row-reverse;
}
.chart .chart-main .msg-item-right .msg-box .icon {
  margin-right: 0;
  margin-left: 20rpx;
}
.chart .chart-main .msg-item-right .msg-box .content-text {
  background-color: #FFE431;
  border-radius: 20rpx 0 20rpx 20rpx;
}

