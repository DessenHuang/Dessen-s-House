<view class="container"><view class="top-bar"><view class="top-bar-left"><image class="back" src="/static/images/public/left.png" data-event-opts="{{[['tap',[['toBack',['$event']]]]]}}" bindtap="__e"></image></view><view class="top-bar-center">{{chartName}}</view><view class="top-bar-right"><image class="more" src="/static/images/public/more.png" data-event-opts="{{[['tap',[['toMore',['$event']]]]]}}" bindtap="__e"></image></view></view><scroll-view class="chart" scroll-y="true" scroll-with-animation="true" scroll-into-view="{{scrollToView}}"><view class="chart-main" style="{{'padding-bottom:'+(inputHeight)+';'}}"><block wx:for="{{msgList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['msg-item','msg-item-left',(item.fromId===uid)?'msg-item-right':'']}}" id="{{'msg'+index}}"><view class="time"><uni-dateformat vue-id="{{'5d3038c0-1-'+index}}" date="{{item.time}}" threshold="{{[60000,3600000]}}" format="yyyy/MM/dd hh:mm:ss" bind:__l="__l"></uni-dateformat></view><view class="msg-box"><image class="icon" src="{{item.iconPath}}" data-event-opts="{{[['tap',[['iconToDetail',['$0'],[[['msgList','',index,'fromId']]]]]]]}}" bindtap="__e"></image><view class="content"><block wx:if="{{item.types===0}}"><view class="content-text">{{item.message}}</view></block><block wx:else><block wx:if="{{item.types===1}}"><image class="content-img" mode="widthFix" src="{{item.message}}" data-event-opts="{{[['tap',[['previewImg',['$0'],[[['msgList','',index,'message']]]]]]]}}" bindtap="__e"></image></block><block wx:else><view data-event-opts="{{[['tap',[['openLocation',['$0'],[[['msgList','',index,'message']]]]]]]}}" class="content-map" bindtap="__e"><view class="map-name">{{item.message.name}}</view><view class="map-address">{{item.message.address}}</view><image class="map" src="/static/images/chart/map.png" mode="aspectFill"></image></view></block></block></view></view></view></block></view></scroll-view><submit bind:inputs="__e" bind:height="__e" bind:sendImg="__e" bind:sendSite="__e" vue-id="5d3038c0-2" data-event-opts="{{[['^inputs',[['inputs']]],['^height',[['height']]],['^sendImg',[['sendImg']]],['^sendSite',[['sendSite']]]]}}" bind:__l="__l"></submit></view>