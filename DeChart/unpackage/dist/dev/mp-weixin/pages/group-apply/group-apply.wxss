.container {
  padding-top: 88rpx;
}
.top-bar {
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #cccc;
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
}
.top-bar-left {
  /* margin-left: 20rpx;
 */
  width: 15%;
  display: flex;
  justify-content: center;
}
.top-bar-center {
  width: 70%;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
}
.top-bar-right {
   /* margin-right: 20rpx;
 */
   width: 15%;
   display: flex;
   justify-content: center;
}
.top-bar {
  background-color: #fff;
}
.top-bar .top-bar-left .back {
  width: 48rpx;
  height: 48rpx;
}
.head {
  z-index: 100;
  width: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 46rpx;
  background-color: #fff;
}
.head .g-icon {
  width: 196rpx;
  height: 196rpx;
  box-shadow: 0px 18px 20px 0px rgba(39, 40, 50, 0.1);
  border-radius: 40rpx;
  margin-bottom: 40rpx;
}
.head .group-name {
  width: 360rpx;
  padding: 28rpx;
  text-align: center;
  font-size: 38rpx;
  color: #272832;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.head .title {
  width: 90%;
  text-align: left;
  font-size: 44rpx;
  color: #272832;
  font-weight: 600;
  margin-top: 40rpx;
}
.users {
  padding: 0 28rpx;
  padding-top: 490rpx;
  padding-bottom: 170rpx;
  box-sizing: border-box;
}
.users-list-item {
  padding: 24rpx 0;
  display: flex;
  align-items: center;
}
.users-list-item .tag image {
  width: 54rpx;
  height: 54rpx;
}
.users-list-item .user-info {
  width: 100%;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
}
.users-list-item .user-info .icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
}
.users-list-item .user-info .name {
  width: 60%;
  padding-left: 28rpx;
  font-size: 36rpx;
  color: #272832;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 168rpx;
  display: flex;
  justify-content: center;
  background: #FAFAFA;
  box-shadow: inset 0px 0.5px 0px 0px rgba(0, 0, 0, 0.1);
  padding-top: 20rpx;
  box-sizing: border-box;
}
.bottom .button {
  width: 686rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: #ccc;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #FAFAFA;
  font-weight: 400;
}
.bottom .btn-selected {
  background: #FFE431;
  color: #272832;
}

