<view class="container"><view class="top-bar"><view class="top-bar-left"><image class="back" src="/static/images/public/left.png" data-event-opts="{{[['tap',[['toBack',['$event']]]]]}}" bindtap="__e"></image></view><view class="top-bar-center">邀请好友</view><view class="top-bar-right"></view></view><view class="head"><image class="g-icon" src="{{gIcon}}"></image><view class="group-name">{{gName}}</view><view class="title">用户</view></view><view class="users" scroll-y="true"><view class="users-list"><block wx:for="{{applyUsers}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="users-list-item"><view class="tag"><block wx:if="{{item.selected}}"><image src="/static/images/public/selected.png" data-event-opts="{{[['tap',[['tabSelect',['$0',index],[[['applyUsers','',index]]]]]]]}}" bindtap="__e"></image></block><block wx:else><image src="/static/images/public/select.png" data-event-opts="{{[['tap',[['tabSelect',['$0',index],[[['applyUsers','',index]]]]]]]}}" bindtap="__e"></image></block></view><view class="user-info"><image class="icon" src="{{item.iconPath}}"></image><text class="name">{{item.name}}</text></view></view></block></view></view><view class="bottom"><block wx:if="{{selectedTotal===0}}"><view class="button">邀请</view></block><block wx:else><view data-event-opts="{{[['tap',[['apply',['$event']]]]]}}" class="button btn-selected" bindtap="__e">{{"邀请("+selectedTotal+")"}}</view></block></view></view>