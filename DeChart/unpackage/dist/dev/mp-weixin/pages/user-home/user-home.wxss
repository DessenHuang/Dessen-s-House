.container {
  padding-top: 88rpx;
}
.top-bar {
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #cccc;
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
}
.top-bar-left {
  /* margin-left: 20rpx;
 */
  width: 15%;
  display: flex;
  justify-content: center;
}
.top-bar-center {
  width: 70%;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
}
.top-bar-right {
   /* margin-right: 20rpx;
 */
   width: 15%;
   display: flex;
   justify-content: center;
}
.top-bar {
  border-bottom: none;
  background-color: null;
}
.top-bar .top-bar-left .back {
  width: 48rpx;
  height: 48rpx;
}
.top-bar .top-bar-right .more {
  width: 56rpx;
  height: 56rpx;
}
.bg {
  z-index: -2;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.bg-white {
  width: 100%;
  height: 100%;
}
.bg-img {
  z-index: -1;
  opacity: .4;
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  width: 110%;
  height: 110%;
  -webkit-filter: blur(12px);
          filter: blur(12px);
}
.main .user-head {
  display: flex;
  justify-content: center;
}
.main .user-head .icon-box {
  z-index: 10;
  position: relative;
}
.main .user-head .icon-box .sex-box {
  z-index: 11;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  width: 32px;
  height: 32px;
  border-radius: 50%;
}
.main .user-head .icon-box .sex-box .sex {
  width: 16px;
  height: 16px;
}
.main .user-head .icon-box .sex-male {
  background-color: #5799ff;
}
.main .user-head .icon-box .sex-female {
  background-color: #FF5D5B;
}
.main .user-head .icon-box .icon {
  margin: auto;
  width: 400rpx;
  height: 400rpx;
  border-radius: 24px;
  border: 6rpx solid #efefef;
  box-shadow: 0px 18px 20px 0px rgba(39, 40, 50, 0.1);
}
.main .user-info {
  margin-top: 40rpx;
  padding: 0 100rpx;
  display: flex;
  flex-direction: column;
}
.main .user-info .name {
  text-align: center;
  font-size: 26px;
  color: #272832;
  font-weight: 400;
}
.main .user-info .intro {
  padding: 20rpx 0;
  text-align: left;
  font-size: 14px;
  color: #272832;
  font-weight: 200;
  letter-spacing: 1px;
}
.main .bottom-box,
.main .add-bt {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 124rpx;
}
.main .add-bt {
  z-index: 100;
  bottom: -124rpx;
  justify-content: space-around;
}
.main .bottom-box {
  justify-content: center;
}
.main .btn,
.main .cancel,
.main .send {
  background-color: #FFE431;
  width: 684rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #272832;
  font-weight: 400;
  border-radius: 10rpx;
}
.main .del {
  background-color: #E1061E;
  color: #ffff;
}
.main .cancel {
  width: 172rpx;
  background: rgba(39, 40, 50, 0.1);
}
.main .send {
  width: 480rpx;
}
.main .add-msg {
  z-index: 2;
  position: fixed;
  width: 100%;
  padding: 0 28px;
  box-sizing: border-box;
  background-color: #ffff;
  border-radius: 20px 20px 0 0;
}
.main .add-msg .content {
  margin-top: 170rpx;
  padding: 18rpx 22rpx;
  box-sizing: border-box;
  width: 100%;
  height: 56%;
  background: #F3F4F6;
  border-radius: 10px;
  font-size: 32rpx;
  color: #272832;
  font-weight: 400;
}

