<view class="container"><view class="top-bar"><view data-event-opts="{{[['tap',[['toLogin',['$event']]]]]}}" class="top-bar-left" bindtap="__e"><image src="/static/images/register/left.png"></image></view><view class="top-bar-right"></view></view><view class="content"><view class="logo"><image src="/static/images/public/logo.png"></image></view><view class="info"><text class="title">注册</text></view><view class="input-box"><view class="input-container"><input class="username" type="text" placeholder="请取个名字" data-event-opts="{{[['input',[['__set_model',['$0','username','$event',[]],['userInfo']]]]]}}" value="{{userInfo.username}}" bindinput="__e"/><block wx:if="{{isUsedSaved}}"><text class="tips">用户名已存在</text></block></view><view class="input-container"><input class="e-mail" type="text" placeholder="请输入邮箱" data-event-opts="{{[['blur',[['isEmailValid',['$event']]]],['input',[['__set_model',['$0','email','$event',[]],['userInfo']]]]]}}" value="{{userInfo.email}}" bindblur="__e" bindinput="__e"/><block wx:if="{{isEmailSaved}}"><text class="tips">邮箱格式有误</text></block></view><view class="input-container"><input class="password" type="text" password="{{!isClear}}" placeholder="请输入密码" data-event-opts="{{[['input',[['__set_model',['$0','password','$event',[]],['userInfo']]]]]}}" value="{{userInfo.password}}" bindinput="__e"/><block wx:if="{{isClear}}"><image class="view" src="/static/images/register/show.png" data-event-opts="{{[['tap',[['tabPwdShow',['$event']]]]]}}" bindtap="__e"></image></block><block wx:else><image class="view" src="/static/images/register/hide.png" data-event-opts="{{[['tap',[['tabPwdShow',['$event']]]]]}}" bindtap="__e"></image></block></view></view><view class="register-btn"><button class="{{['register',(registerOk)?'submit':'']}}" type="primary" data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" bindtap="__e">注册</button></view></view></view>