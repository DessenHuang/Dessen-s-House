.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .top-bar {
  width: 80%;
  height: 10vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
}
.container .top-bar .top-bar-right {
  font-size: 36rpx;
  color: #333333;
  font-weight: 500;
}
.container .content {
  width: 80%;
}
.container .content .logo {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}
.container .content .logo image {
  width: 192rpx;
  height: 192rpx;
}
.container .content .info {
  display: flex;
  flex-direction: column;
}
.container .content .info .title {
  font-size: 56rpx;
  color: #272832;
  font-weight: 500;
  font-family: PingFangSC-Medium;
  margin-bottom: 14rpx;
}
.container .content .info .intro {
  font-size: 40rpx;
  color: rgba(39, 40, 50, 0.5);
  font-weight: 400;
}
.container .content .input-box {
  margin: 20rpx 0;
}
.container .content .input-box input {
  padding: 40rpx 0;
  border-bottom: solid 1px #ccc;
  font-size: 36rpx;
  color: #272832;
  margin: 10rpx 0;
}
.container .content .input-box .tips {
  color: #ff5d5b;
}
.container .content .login-btn {
  margin-top: 60rpx;
}
.container .content .login-btn .login {
  width: 520rpx;
  height: 96rpx;
  font-size: 32rpx;
  color: #272832;
  line-height: 96rpx;
  font-weight: 500;
  border-radius: 48rpx;
  background-color: #D4D4D6;
}
.container .content .login-btn .submit {
  color: #333333;
  background-color: #FFE431;
}

